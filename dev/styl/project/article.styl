
.container_articale
	cf()
	background-color #6b6b6b
	position relative
	padding 90px 0 65px

.btn_wrapper
	text-align center
	width 360px
	height 55px
	background-color #000
	border-radius 3px
	padding 20px 100px
	absolute top -25px right 50%
	margin-right -180px
	

.btn_link
	color main_yellow
	font-size fz15
	font-family lucida_dimibold
	text-transform uppercase
.artical_head
	padding-bottom 15px	
.article
	width 25%
	float left
	padding-right 40px	
	p
		color #e6e6e6
		font-size fz12
		line-height 24px
		font-family lucida_regular
		padding-left 5px
.article
	&:last-child
		padding-right 0
.articale_icon
	float left
.articale_title
	padding-top 8px
	padding-left 40px
	color main_yellow
	font-size fz15
	line-height 24px
	font-family lucida_dimibold