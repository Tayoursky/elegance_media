/*==========  Desktop First Method  ==========*/

/* Large Devices, Wide Screens */
@media only screen and (max-width : 1200px) {

}

/* Medium Devices, Desktops */
@media only screen and (max-width : 992px) {
	.search,
	.twitter{
		width: 100% !important;
		text-align: center;
	}
}

/* Small Devices, Tablets */
@media only screen and (max-width : 850px) {
	.logo a span{
		display: none;
	}
	.article{
	width: 50% !important;
	padding: 0 !important;
	margin-bottom: 25px;
	
	}
	.article:nth-child(even){
		clear: both;
	padding: 0 15px 0 0  !important;
	}
	.company{
		width: 100% !important;
		padding-right: 0px !important;
	}
	.testimonials{
		width: 50% !important;
		padding-right: 30px !important;
	}
	.blog{
		width: 50% !important;
	}
	
}
@media only screen and (max-width : 800px) {
	.header_nav{
 		position relative
 	}
 	.header_nav ul {
 		display none
 		background-color: #efe700;
 		width: 100%;
 		position: absolute;
 		z-index: 100;
 		top: 58px;
 }
 	.header_nav ul li{
 		display block !important
 	}
 	.header_nav ul li a{
 		font-size 34px !important
 		line-height 64px !important
 	}

	
 	.btn_menu{
 		display: block !important;
 	}
 	.footer_nav,
 	.social,
 	.location,
 	.text_widget{
 		width: 50% !important;
 		padding-bottom:25px;
 		padding-right 0px !important;
 		
 	}
 	.footer_nav,
 	.location{
		clear: both;
		padding-right: 25px;
	}


}
/* Extra Small Devices, Phones */
@media only screen and (max-width : 650px) {
	 
.next_button{
	left: 0px !important;
	background-color rgba(#fff, 0.5)
	height 60px !important;
	width 32px !important;
	border-radius 20px
	z-index 1
}
.next_button img{
	absolute top 12px left 5px
}
.prev_button img{
	absolute top 12px right 5px
	}
.prev_button{
	right: 0px !important;
	background-color rgba(#fff, 0.5)
	height 60px !important;
	width 32px !important;
	border-radius 20px
	z-index 1
	}
	.article{
	width: 100% !important;
	margin-bottom: 25px;
	
	}
	.company,
	.testimonials,
	.blog{
		width: 100% !important;
		padding-right: 0px !important;
	}
			
}

/* Custom, iPhone Retina */
@media only screen and (max-width : 420px) {
	.footer_nav,
 	.social,
 	.location,
 	.text_widget{
		width: 100% !important;
		padding-right: 0px !important;
	}
}

